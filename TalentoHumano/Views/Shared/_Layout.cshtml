<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Talento Humano ITQ</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/Site.css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-danger">
        <div class="container">
            <a href="@Url.Action("Index", "Home", new { area = "" })" class="navbar-brand mx-auto">
                <img src="~/Content/img/ITQ.png" alt="Pagina de Nominas" class="img-fluid custom-img" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
        </div>
    </nav>

    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-md-3">
                <nav class="sidebar close">
                    <header>
                        <div class="image-text">
                            <span class="image">
                                <img src="~/Content/img/sidebar-removebg-preview.png" alt="" class="img-fluid">
                            </span>
                            <div class="text logo-text">
                                <span class="name"></span>
                                <strong><span class="profession">Talento Humano</span></strong>
                            </div>
                        </div>
                        <i class='bx bx-chevron-right toggle'></i>
                    </header>
                    <div class="menu-bar">
                        <div class="menu">
                            <ul class="menu-links">
                                <li class="nav-link">
                                    <i class="fas fa-users"></i>
                                    @Html.ActionLink("Lista de Empleados", "Index", "Administrador", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                </li>
                                <li class="nav-link">
                                    <i class="fas fa-user-plus"></i>
                                    @Html.ActionLink("Crear Nuevo Registro", "Create", "Administrador", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                </li>
                                <li class="nav-link">
                                    <i class="fas fa-file-invoice-dollar"></i>
                                    @Html.ActionLink("Generar Rol de Pagos", "Create", "RolPagos", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                </li>
                                <li class="nav-link">
                                    <i class="fas fa-list"></i>
                                    @Html.ActionLink("Listado de Roles", "Index", "RolPagos", new { area = "" }, new { @class = "nav-item custom-nav-item" })
                                </li>
                            </ul>
                        </div>
                        <div class="bottom-content">
                            <ul>
                                <li class="nav-link">
                                    <i class="fas fa-sign-out-alt"></i>
                                    @Html.ActionLink("Cerrar Sesion", "CerrarSesion", "Home", new { area = "" }, new { @class = "nav-link custom-nav-link" })
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - ITQ</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/js/scrip.js")
    @RenderSection("scripts", required: false)
</body>
</html>
