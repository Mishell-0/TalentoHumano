
@model IEnumerable<TalentoHumano.Models.RolPagos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Roles de Pagos</h2>

<p>
    @Html.ActionLink("Crear Nuevo Rol de Pagos", "Create", "RolPagos")
</p>
<table class="table">
    <tr>
        <th>
            Fecha
        </th>
        <th>
            Empleado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Empleados.Nombres)
            </td>
            <td>
                @Html.ActionLink("Mostrar Rol", "Details", "DetalleRolPagos", new { id = item.idRolPagos }, new { @class = "btn btn-success" })
                @Html.ActionLink("Eliminar Rol", "Delete", "DetalleRolPagos", new { id = item.idRolPagos }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>


